<% content_for :title do %>
新規登録/samplel SNS
<% end %>
<body class="document">
  <div class="header">
    <div class="header-top-button-devise">
      <%= link_to root_path, class: "header-top-title-devise" do %>
      <h1>sample SNS</h1>
      <% end %>
      <%= link_to new_user_session_path, class: "button login" do %>
      <p>ログイン</p>
      <% end %>
    </div>
  </div>
  <div class="devise-container">
    <div class="page-canvas">
      <div class="signup-wrapper">
        <h2 class="signup-title">新規登録</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-field">
          <%= f.label :name, class:"form-field-label" %>
          <%= f.text_field :name, autofocus: true, class: "input-form" %>
        </div>
        <div class="form-field">
          <%= f.label :email, class:"form-field-label" %>
          <%= f.email_field :email, autofocus: true, class: "input-form" %>
        </div>
        <div class="form-field">
          <%= f.label :password, class:"form-field-label" %>
          <% if @minimum_password_length %>
          <p>(半角<%= @minimum_password_length %>文字以上)</p>
          <% end %>
          <%= f.password_field :password, class: "input-form", autocomplete: "off" %>
        </div>
        <div class="form-field">
          <%= f.label :password_confirmation, class:"form-field-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "input-form" %>
        </div>
        <div class="form-action">
          <%= f.submit "アカウント作成", class: "signup-button" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</body>
