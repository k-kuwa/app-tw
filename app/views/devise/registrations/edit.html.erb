<% content_for :title do %>
プロフィール編集/samplel SNS
<% end %>
<body class="document">
  <div class="header">
    <div class="menu-overlay"></div>
    <p class="profile_headline">プロフィール編集</p>
    <div class="header-top">
      <div class="header-top-button">
        <div class="side-menu">
          <ul>
            <li>
              <div class="side-menu-image">
                <% if current_user.image.present? %>
                <%= image_tag current_user.image.url, class:"profile-image" %>
                <% else %>
                <%= image_tag 'user_image.jpg', class:"profile-no-image" %>
                <% end %>
                <div class="image-overlay">
                </div>
                <P>
                  <%= current_user.name %>
                </P>
              </div>
            </li>
            <li>
              <%= link_to root_path, class: "side-menu-link" do %>
              <div class="side-menu-icon">
                <%= fa_icon "home 3x color" %>
              </div>
              <h2>ホーム</h2>
              <% end %>
            </li>
            <li>
              <%= link_to user_path(current_user.id), class: "side-menu-link" do %>
              <div class="side-menu-icon">
                <%= fa_icon "user 3x color" %>
              </div>
              <h2> プロフィール</h2>
              <% end %>
            </li>
            <li>
              <div class="side-menu-icon">
                <%= fa_icon "users 3x color" %>
              </div>
              <h2>コミュニティ</h2>
            </li>
            <li>
              <div class="side-menu-icon">
                <%= fa_icon "cog 3x color" %>
              </div>
              <h2>設定</h2>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete, class: "side-menu-link" do %>
              <div class="side-menu-icon">
                <%= fa_icon "sign-out 3x color" %>
              </div>
              <h2> ログアウト</h2>
              <% end %>
            </li>
          </ul>
        </div>
        <div class="header-menu-button">
          <span></span>
          <span></span>
          <span></span>
        </div>
        <div class="search-button">
          <%= fa_icon "search 3x color" %>
        </div>
      </div>
    </div>
  </div>
  <div class="devise-container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <div class="content-profile">
      <div class="image-overlay">
      </div>
      <div class="content-profile-image">
        <% if @user.image.present? %>
        <%= image_tag @user.image.url, class:"profile-image" %>
        <% else %>
        <%= image_tag 'prof_no_image.png', class:"profile-no-image" %>
        <% end %>
        <%= f.label :image do %>
        <%= fa_icon "camera 4x color" %>
        <span class="prolile-select-image">画像を選択</span>
        <% end %>
        <%= f.file_field :image %>
      </div>
      <div class="content-profile-info">
        <div class="profile-form-name">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true %>
        </div>
        <div class="profile-form-message">
          <%= f.label :text %>
          <%= f.text_area :text, maxlength:140, placeholder:"140文字以内", autofocus: true %>
        </div>
      </div>
    </div>
    <div class="profile-form-action">
      <%= f.submit "更新する", class: "update-button" %>
    </div>
    <% end %>
  </div>
</body>
